<style>h3{ padding: 15px; text-align: center; }</style>
<%- include('../partials/head2') %>

<div class="pendientes">
    <% if(pendientes.length > 0){ %>
        <h3>Pedidos Pendientes</h3>
        <% pendientes.forEach(pedido => { %>
            <div class="mis-pedidos">
                <h4>Cantidad</h4>
                <h4>Costo</h4>
                <h4>Fecha</h4>
                <h4>Estado</h4>
                <a class="mb-3" href="/pedido/detalle/<%= pedido.id %>">
                    <p><%= pedido.cantidad_productos %></p>
                </a>
                <a class="mb-3" href="/pedido/detalle/<%= pedido.id %>">
                    <p>$<%= pedido.costo %></p>
                </a>
                <a class="mb-3" href="/pedido/detalle/<%= pedido.id %>">
                    <p class="mb-3"><%= pedido.fecha %></p>
                </a>
                <a class="mb-3" href="/pedido/detalle/<%= pedido.id %>">
                    <p class="mb-3"><%= pedido.estado %></p>
                </a>
            </div> 
        <% }); %>
    <% }else{ %>
        <h3>No hay pedidos pendientes</h3>
    <% } %>
</div>

